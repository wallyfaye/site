{
  "name": "site",
  "sideEffects": false,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:wallyfaye/site.git",
  "author": "Wally Faye <wally.faye@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --env.production --config webpack.prod.js",
    "dev": "webpack-dev-server --env.production=false --config webpack.dev.js",
    "test": "webpack-dev-server --config webpack.test.js",
    "selenium": "selenium-standalone install && selenium-standalone start",
    "codeceptjs": "codeceptjs run --steps",
    "hint": "hint https://localhost/",
    "hint:report": "open ./hint-report/https-localhost/index.html",
    "build:app": "yarn run cordova:create && yarn run ios:add && yarn run android:add",
    "cordova:create": "cordova create ./app/site com.test.site site",
    "ios:add": "(cd ./app/site && cordova platform add ios)",
    "ios:run": "(cd ./app/site && cordova run --buildConfig=./../../build.json ios)",
    "android:add": "(cd ./app/site && cordova platform add android)",
    "android:run": "(cd ./app/site && cordova emulate --target=test android)",
    "android:avd": "avdmanager create avd --force -n test -k \"system-images;android-26;google_apis;x86_64\""
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
